<p id="notice" class = "row d-flex justify-content-center h4"><%= notice %></p>

<p>
  <h1 class = "h1 text-center">Title:</h1>
  <p class = "h3 text-center"><%= @game.name %></p>
</p>

<p>
  <h1 class = "h1 text-center">Cost:</h1>
  <p class = "h3 text-center"><%= @game.amount %></p>
</p>

<p>
  <h1 class = "h1 text-center">Genres</h1>
</p>
<table class = "table table-hover">
  <tr>
    <th scope="col" class = "text-center h4">Name</th>
    <th scope="col" class = "text-center h4">Icon</th>
  </tr>
  <tbody>
    <%= game_genre_list(@game.genres.all) %>
  </tbody>
</table>

<br>

<%= game_destroy_button(@game) %>

<p>
  <strong class="main-text h4 row justify-content-center"><%= link_to 'Back', user_games_path(current_user), class: "main-text" %></strong>
</p>

