<h1>Games</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% genreless_games.each do |game| %>
      <tr>
        <td><%= game.name %></td>
        <td><%= game.amount %></td>
        <td><%= link_to 'Show', user_game_path(current_user, game.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add New', new_user_game_path(current_user) %>
