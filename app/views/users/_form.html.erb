<%= form_with(model: user) do |form| %>

  <h1 class = "h1 text-center">Name</h1>

  <div class="field d-flex justify-content-center my-2">
    <%= form.text_field :name, class: "form-control col-5" %>
  </div>

  <div class="actions main-text h4 row justify-content-center my-3">
    <%= form.submit "Create User", class: "p-1 main-text submit rounded h4 border-white col-5" %>
  </div>
<% end %>
