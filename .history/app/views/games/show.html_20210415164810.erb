<p id="notice"><%= notice %></p>

<p>
  <h1 class = "h1 text-center">Title:</h1>
  <p class = "h4 text-center color-white"><%= @game.name %></p>
</p>

<p>
  <strong>Cost:</strong>
  <%= @game.amount %>
</p>

<p>
  <strong>Genres</strong>
</p>
<table>
  <tr>
    <th scope="col">Name</th>
    <th scope="col">Icon</th>
  </tr>
  <tbody>
    <% @genres.each do |genre| %>
    <tr>
      <td><%= genre.name %></td>
      <td><%= genre.icon %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'Destroy', user_game_path(current_user, @game), method: :delete, data: { confirm: 'Are you sure?' } %>
<%= link_to 'Back', user_games_path %>
