<p id="notice"><%= notice %></p>

<h1>Genres</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= link_to "#{genre.name}", user_genre_path(current_user, genre) %></td>
        <td><%= genre.description %></td>
        <td><%= link_to 'Show', user_genre_path(current_user, genre.id) %></td>
        <td><%= link_to 'Destroy', user_genre_path(current_user, genre.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Genre', new_user_genre_path(current_user) %>
