<h1 class='title h1'>Log in</h1>

<div>
  <div class="col mx-4 col-md-6 mx-md-auto">
    <%= form_with(url: login_path, scope: :session, local: true) do |f| %>

      <%= f.label :name, class: 'form-text main-text' %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.submit "Log in", class: " mt-2 btn btn-primary" %>
    <% end %>
  </div>
  <div class="col mx-4 col-md-6 mx-md-auto">
    <%= link_to "Sign Up", new_user_path, class: "signup-link btn" %>
  </div>
</div>