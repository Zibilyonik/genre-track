<h1 class='title h1'>Log in</h1>

<div class="row">
  <div class="col-6 mx-auto">
    <%= form_with(url: login_path, scope: :session, local: true) do |f| %>

      <%= f.label :name, class: 'form-text main-text' %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.submit "Log in", class: " mt-2 btn btn-primary" %>
    <% end %>
  </div>
</div>
<div class="row mt-2 signup mx-auto col-7">
  <%= link_to "Sign Up", new_user_path, class: "signup-link btn" %>
</div>