<p id="notice"><%= notice %></p>

<p>
  <strong>Username:</strong>
  <%= @user.username %>
</p>

<p>
  <strong>Games:</strong>
  <% @user.games.each do |game| %>
      <tr>
        <td><%= game.title %></td>
        <td><%= game.developer %></td>
        <td><%= link_to 'Show', user_game_path(@user, game.id) %></td>
        <% if @user = current_user %>
          <td><%= link_to 'Destroy', user_game_path(current_user, game.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
</p>

<p>
  <strong>Genres:</strong>
  <% @user.genres.each do |genre| %>
    <tr>
      <td><%= genre.name %></td>
      <td><%= genre.description %></td>
      <td><%= link_to 'Show', user_genre_path(@user, genre.id) %></td>
      <% if @user = current_user %>
        <td><%= link_to 'Destroy', user_genre_path(current_user, genre.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tr>
    </br>
  <% end %>
</p>


<%= link_to 'Genres', user_genres_path(current_user) %> |
<%= link_to 'Games', user_games_path(current_user) %>
